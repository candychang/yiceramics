<div ng-controller="ShopCtrl"class="container">
    <h1>Shop</h1>
    <div class="row">
        <div class="col-md-8">
            <h3>Products</h3>
        </div>
        <div class="col-md-4">
            <h4>Cart: {{cart.getTotalCount()}} </h4>
            <%= link_to "see cart", cart_path %>
        </div>
        
    </div>
    
    <div ng-repeat="product in inventory" class="col-md-3 panel">
        <img height="60px" ng-src="{{product.image.thumb.url}}"/>
        
        <h3><a href="works/{{product.id}}">{{product.name}}</a></h3>
 
        <p>Size: {{ product.size }}</p>
        <p>Clay type: {{ product.clay_type }}</p>
        <p>Firing: {{ product.fire_type }}</p>
        <p>Price: {{ product.price | currency }}</p>
        <p>Quantity: {{ product.quantity }}</p>
        <button class="btn btn-primary"  ng-click="addItem(product)"</button>Add to Cart</button>
        <button class="btn btn-secondary"  ng-click="removeItem(product)"</button>Remove from Cart</button>
    </div>
</div>